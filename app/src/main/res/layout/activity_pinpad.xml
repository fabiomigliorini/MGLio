<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".activity.PinpadActivity">
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/valor_textView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="R$ 1000,00"
        android:gravity="end|center"
        android:padding="16dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeStepGranularity="2sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:elevation="10dp">
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:background="#ECECEC"
            app:alignmentMode="alignMargins"
            app:columnCount="3"
            app:rowCount="4"
            android:padding="1dp"
            app:useDefaultMargins="false">

            <RelativeLayout
                android:id="@+id/n1_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_marginEnd="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="36sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/n2_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="36sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/n3_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_marginStart="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="36sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/n4_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="36sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/n5_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="36sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/n6_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="36sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/n7_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="36sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/n8_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="36sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/n9_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="36sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calculator_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_marginEnd="1dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_calculator_36" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/n0_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/back_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_marginStart="1dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_backspace_36" />
            </RelativeLayout>
        </androidx.gridlayout.widget.GridLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pagar_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="PAGAR"
            android:enabled="false"
            android:backgroundTint="@drawable/pagar_button_color_state"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>