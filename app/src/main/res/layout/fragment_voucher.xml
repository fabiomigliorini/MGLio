<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.pagamento.VoucherFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Escolha a forma de pagamento"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/voucher_refeicao_button"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="12dp"
                android:text="Refeição"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                app:icon="@drawable/ic_baseline_chevron_right_24"
                app:iconGravity="end"
                app:iconPadding="-24dp"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/voucher_alimentacao_button"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="12dp"
                android:text="Alimentação"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                app:icon="@drawable/ic_baseline_chevron_right_24"
                app:iconGravity="end"
                app:iconPadding="-24dp"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/voucher_automotivo_button"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="12dp"
                android:text="Automotivo"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                app:icon="@drawable/ic_baseline_chevron_right_24"
                app:iconGravity="end"
                app:iconPadding="-24dp"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/voucher_cultura_button"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="12dp"
                android:text="Cultura"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                app:icon="@drawable/ic_baseline_chevron_right_24"
                app:iconGravity="end"
                app:iconPadding="-24dp"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/voucher_beneficios_button"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="12dp"
                android:text="Beneficios"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                app:icon="@drawable/ic_baseline_chevron_right_24"
                app:iconGravity="end"
                app:iconPadding="-24dp"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>